{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/coin-info"
  },
  "definitions": {
    "coin-info": {
      "type": "object",
      "properties": {
        "coin": {
          "type": "string",
          "minLength": 1
        },
        "derivationPath": {
          "type": "string",
          "minLength": 1
        },
        "curve": {
          "enum": ["SECP256k1", "ED25519", "ED25519Blake2bNano", "SubSr25519", "Curve25519", "NIST256p1"]
        },
        "network": {
          "enum": ["MainNet", "TestNet"]
        },
        "segWit": {
          "type": "string"
        }
      },
      "required": ["coin", "derivationPath", "curve"],
      "additionalProperties": false
    }
  }
}
