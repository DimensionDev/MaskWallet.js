{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "anyOf": [
      { "$ref": "#/definitions/curve", "description": "Curve based Coin Info" },
      { "$ref": "#/definitions/rsa", "description": "RSA based Coin Info" }
    ]
  },
  "definitions": {
    "curve": {
      "type": "object",
      "properties": {
        "type": { "const": "curve" },
        "coin": { "$ref": "#/definitions/coin-name" },
        "derivationPath": { "type": "string", "minLength": 1 },
        "curve": { "enum": ["SECP256k1", "ED25519", "ED25519Blake2bNano", "SubSr25519", "Curve25519", "NIST256p1"] },
        "network": { "type": "string" },
        "segWit": { "type": "string" }
      },
      "required": ["type", "coin", "derivationPath", "curve", "network"],
      "additionalProperties": false
    },
    "rsa": {
      "type": "object",
      "properties": {
        "type": { "const": "rsa" },
        "coin": { "$ref": "#/definitions/coin-name" },
        "suite": {
          "type": "array",
          "items": [
            {
              "enum": ["RSA-4096"],
              "description": "Key Type"
            },
            {
              "enum": ["AES-256-CBC"],
              "description": "Encryption algorithm"
            },
            {
              "enum": ["SHA-256", "SHA-384"],
              "description": "Hash algorithm"
            }
          ]
        },
        "network": { "type": "string" }
      },
      "required": ["type", "coin", "suite", "network"],
      "additionalProperties": false
    },
    "coin-name": {
      "type": "string",
      "minLength": 1
    }
  }
}
